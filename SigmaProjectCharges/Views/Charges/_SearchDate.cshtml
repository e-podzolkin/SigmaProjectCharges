@model BL.ChargesModels.ChargesInfo

@{
    var searchbutton = Resx.ChargesStrings.searchbutton;
}
@section Scripts {
@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/bundles/datepicker")
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
        
    <div class="form-horizontal">
        @Html.ValidationSummary(true)

        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.SearchDate)
                @Html.ValidationMessageFor(model => model.SearchDate)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@searchbutton" class="btn btn-default" />
            </div>
        </div>
    </div>
}