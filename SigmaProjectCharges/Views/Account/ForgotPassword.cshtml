@model BL.AccountModels.ForgotPasswordModel

@{
    var forgotpasswordtitle = Resx.AccountStrings.forgotpasswordtitle;
    ViewBag.Title = forgotpasswordtitle;
}

@section Scripts {
@Scripts.Render("~/bundles/jqueryval")
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
        
    <div class="form-horizontal">
        <h3>@forgotpasswordtitle:</h3>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Login, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Login)
                @Html.ValidationMessageFor(model => model.Login)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@Resx.AccountStrings.forgotpasswordbutton" class="btn btn-default" />
            </div>
        </div>
    </div>
}
